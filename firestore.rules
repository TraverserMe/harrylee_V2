rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /user/{document=**} {
      allow get: if true;
      allow write: if isAdmin();
    }
  }
  function isAdmin() {
    return request.auth!=null && request.auth.token.isAdmin == true;
  }
}